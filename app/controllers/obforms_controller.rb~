class ObformsController < ApplicationController
  # GET /obforms
  # GET /obforms.json
  def index
    @obforms = Obform.all

    respond_to do |format|
      format.html # index.html.erb
      format.json { render json: @obforms }
    end
  end

  # GET /obforms/1
  # GET /obforms/1.json
  def show
    @obform = Obform.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.json { render json: @obform }
    end
  end

  # GET /obforms/new
  # GET /obforms/new.json
  def new
    @obform = Obform.new

    respond_to do |format|
      format.html # new.html.erb
      format.json { render json: @obform }
    end
  end

  # GET /obforms/1/edit
  def edit
    @obform = Obform.find(params[:id])
  end

  # POST /obforms
  # POST /obforms.json
  def create
    @obform = Obform.new(params[:obform])

    respond_to do |format|
      if @obform.save
        format.html { redirect_to @obform, notice: 'Obform was successfully created.' }
        format.json { render json: @obform, status: :created, location: @obform }
      else
        format.html { render action: "new" }
        format.json { render json: @obform.errors, status: :unprocessable_entity }
      end
    end
  end

  # PUT /obforms/1
  # PUT /obforms/1.json
  def update
    @obform = Obform.find(params[:id])

    respond_to do |format|
      if @obform.update_attributes(params[:obform])
        format.html { redirect_to @obform, notice: 'Obform was successfully updated.' }
        format.json { head :ok }
      else
        format.html { render action: "edit" }
        format.json { render json: @obform.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /obforms/1
  # DELETE /obforms/1.json
  def destroy
    @obform = Obform.find(params[:id])
    @obform.destroy

    respond_to do |format|
      format.html { redirect_to obforms_url }
      format.json { head :ok }
    end
  end
end
